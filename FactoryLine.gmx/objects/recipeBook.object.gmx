            <string>///Page turning

if ( mouseClicked( id ) ) {
    clickDownPosX = mouse_x;
    clickDownPosY = mouse_y;
}

if ( mouseReleased( id ) ) {
    if ( point_distance( mouse_x, mouse_y, clickDownPosX, clickDownPosY ) &lt; clickDownDistTolerance ) {
        //Clicking in place, therefore turn the page
        if ( mouse_x &gt; x + width*pageTurnRegionSize ) {
            currentPage += 1;
            if ( currentPage &gt;= numPages ) {
                currentPage = 0;
            }
            audio_play_sound( pageTurn_sd, 1, false );
        }
        else if ( mouse_x &lt; x - width*pageTurnRegionSize ){
            currentPage -= 1;
            if ( currentPage &lt; 0 ) {
                currentPage = numPages - 1;
            }
            audio_play_sound( pageTurn_sd, 1, false );
        }
        else {
            fullscale = !fullscale;
            dragging = false;
            if ( fullscale ) {
                deskDocSetScale( id, true );
            }
            else {
                deskDocSetScale( id, false );
            }
        }
        fullImageIndex = currentPage;
    }    
}

